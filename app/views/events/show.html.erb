<div class="tile is-ancestor">
    <article class="tile is-parent">
        <figure class="image tile is-child box">
            <img src=<%= @event.show_cover %> alt="Image">
        </figure>
        <div class="tile is-child center box">
            <h1 class="title is-1"><%= @event.title %></h1>
            <p class="subtitle"><%= @event.city %> | <%= @event.start_time_humanize %></p>
            <p><%= @event.description %></p>
            <% if @event.link.present? %>
                <a href="<%= @event.link %>">Visit a website</a>
            <% end %>
            <p style="margin-bottom: 0px;"><small>Organizer: <a href="/organizers/<%= @event.organizer.id %>"><%= @event.organizer.title %></a></small></p>
            <p><small>Address: <%= @event.address %></small></p>
            <a href="<%= edit_event_url(@event.id) %>" class="button" style="margin-top: 1rem;">Edit</a>
            <a href="<%= events_path %>" class="button" style="margin-top: 1rem;">Home</a>
            <a href="/export/<%= @event.id %>" class="button" style="margin-top: 1rem;">Export as ICS</a>
        </div>
    </article>
</div>
